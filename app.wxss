/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.createButton{
  width: 300px;
  margin-top: 20px;
  color: green;
  border-radius: 4px;
}
.input{
  width: 85%;
  padding: 20px;
  margin-top: 20px;
  margin-left: 10px;
  margin-right: 10px;
  background: #EEE;
  font-size: 16px;
  border-radius: 4px;
}
.textarea{
  width: 85%;
  height: 100px;
  padding: 20px;
  margin-top: 20px;
  margin-left: 10px;
  margin-right: 10px;
  background: #EEE;
  font-size: 16px;
  border-radius: 6px;
}

.levelButton{
  width: 90%;
  display: flex;
  margin-top: 20px;
  margin-left: 20px;
  flex-direction: top;
  align-items: center;
  border: whitesmoke;
  border-radius: 4px;
}